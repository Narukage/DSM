@model MvcApplication1.Models.Pedido
@{
    ViewBag.Title = "Añadir nuevo pedido";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<a id="back" href='@Url.Action("PanelAdmin", "Home")'><img id="atras" src="~/Content/themes/base/images/atras.png" /></a>

<h2 class="text-center">Añadir nuevo pedido</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="container-fluid">
        <div class="col text-center">
            <fieldset>

                <div class="editor-label">
                    @Html.LabelFor(model => model.PrecioTotal)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.PrecioTotal)
                    @Html.ValidationMessageFor(model => model.PrecioTotal)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.iduser)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.iduser)
                    @Html.ValidationMessageFor(model => model.iduser)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Fecha)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Fecha)
                    @Html.ValidationMessageFor(model => model.Fecha)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Estado)
                </div>
                <div class="editor-field">
                    @Html.RadioButtonFor(model => model.Estado, "pendiente")<span>Pendiente</span>
                    @Html.RadioButtonFor(model => model.Estado, "recibido")<span>Recibido</span>
                    @Html.RadioButtonFor(model => model.Estado, "rechazado")<span>Rechazado</span>
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.TipoPago)
                </div>
                <div class="editor-field">
                    @Html.RadioButtonFor(model => model.TipoPago, "paypal")<span>Paypal</span>
                    @Html.RadioButtonFor(model => model.TipoPago, "tarjeta")<span>Tarjeta</span>
                    @Html.RadioButtonFor(model => model.TipoPago, "contrarrembolso")<span>Contrarrembolso</span>

                </div>

                <p>
                    <input type="submit" value="Añadir" class="admin_boton_crear btn btn-success" />
                </p>
            </fieldset>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
