@if (Request.IsAuthenticated)
{
    <div class="row">
        <div class="col-2">
            <span > Hola, @User.Identity.Name </span>
        </div>
        <div class="col-8">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse1" class="float-right"><i class="fa fa-user fa-2x" id="admin-profile-button" aria-hidden="true"></i></a>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse float-right">
                        <div class="panel-body">
                            @Html.ActionLink("Mi perfil", "Perfil", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Administrar" })
                        </div>
                        <div class="panel-body">
                            @Html.ActionLink("Mis pedidos", "PedidosUsuario", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Administrar" })
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()">Desconectar</a>
                        }
                        </div>
                    </div>
                </div>
             </div>
   </div>

        <div class="col-2">
          <a href="@Url.Action("Index", "Cesta")"><span class="badge badge-light">@Session["Clineas"]</span><i class="fa fa-shopping-cart fa-2x" id="admin-profile-button" aria-hidden="true"></i></a>
        </div>
        
            <br />
            <li>@Html.ActionLink("Reportar Incidencia", "Create", "Incidencia")</li>
        </div>
}
else
{
        <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    <div class="text-right">@Html.ActionLink("¿Has olvidado la contraseña?", "RecuperarContrasenya", "Usuario")</div>
}
