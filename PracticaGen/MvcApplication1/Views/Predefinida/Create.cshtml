@model MvcApplication1.Models.Predefinida

@{
    ViewBag.Title = "Añadir nueva pizza";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<a id="back" href='@Url.Action("seleccionTipo", "Producto")'><img id="atras" src="~/Content/themes/base/images/atras.png" /></a>


<h2 class="text-center">Añadir nueva pizza predefinida</h2>

@using (Html.BeginForm("Create", "Predefinida", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="container-fluid">
        <div class="col text-center">
            <fieldset>


                <div class="editor-label">
                    @Html.LabelFor(model => model.Nombre)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Nombre)
                    @Html.ValidationMessageFor(model => model.Nombre)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Descripcion)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Descripcion)
                    @Html.ValidationMessageFor(model => model.Descripcion)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.precio)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.precio, new { @type = "number", @min = "0", @step = "0.01", @value = "0" })
                    @Html.ValidationMessageFor(model => model.precio)
                </div>

                <div class="editor-field">
                    @Html.LabelFor(model => model.Foto)
                    @Html.ValidationMessageFor(model => model.Foto)
                </div>
                <div>
                    <input type="file" name="file" />
                </div>

                <p>
                    <input type="submit" value="Añadir" class="admin_boton_crear btn btn-success" />
                </p>
            </fieldset>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
